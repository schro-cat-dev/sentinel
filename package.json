{
  "name": "@schro-cat-dev/sentinel",
  "version": "0.1.0-alpha.1",
  "description": "TypeScript Logging Libraries targeting Financial-Grade+ requirements. Adopts WAL for durability, WorkerPool for scalability, Hash-Chaining for integrity, PII Masking for privacy, and AI Agentic & Deterministic Processing for intelligent log analysis. (Alpha)",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "rm -rf dist && tsc && rollup -c",
    "gen:proto": "protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=./src/generated --ts_proto_opt=esModuleInterop=true,outputServices=false,oneof=unions,forceLong=bigint,useOptionals=messages,outputJsonMethods=false,outputEncodeMethods=true ./src/proto/wal.proto",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "lint": "eslint \"src/**/*.ts\""
  },
  "files": [
    "dist",
    "dist/workers",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "logging",
    "ai",
    "wal",
    "integrity",
    "audit-log",
    "typescript"
  ],
  "author": "sy (schro-cat-dev)",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/luxon": "^3.7.1",
    "@types/node": "^20.19.30",
    "eslint": "^9.39.2",
    "globals": "^17.1.0",
    "rollup": "^4.56.0",
    "ts-node": "^10.9.0",
    "ts-proto": "^2.11.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.53.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "long": "^5.3.2",
    "luxon": "^3.7.2",
    "protobufjs": "^8.0.0"
  }
}
